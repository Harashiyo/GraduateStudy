<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <inset android:insetTop="5dp"
            android:insetRight="5dp"
            android:insetBottom="5dp"
            android:insetLeft="5dp">
            <shape android:innerRadius="6dp"
                android:shape="ring"
                android:thickness="2dp"
                android:useLevel="false">
                <solid android:color="@color/brightsun" />
                <size android:width="15dp" android:height="16dp" />
                <padding android:bottom="16dp" android:left="16dp"
                    android:right="16dp" android:top="16dp" />
            </shape>
        </inset>
    </item>
</selector>